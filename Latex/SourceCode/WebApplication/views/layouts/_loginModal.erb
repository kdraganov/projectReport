<div id="loginModal" class="reveal-modal large" data-reveal style="max-width: 600px;">
    <div class="row">
        <div class="small-12 medium-12 large-12 small-centered medium-centered large-centered columns">
            <fieldset>
                <legend><h2>Login</h2></legend>
                <%= form_tag(:action => 'login', :controller => 'main') do %>
                    <label>Username<%= text_field_tag(:username) %>
                    </label>
                    <label>Password<%= password_field_tag :password %>
                    </label>
                    <%= submit_tag("Log in", class: "button radius expand") %>
                <% end %>
            </fieldset>
        </div>
    </div>
    <a class="close-reveal-modal">&#215;</a>
</div>