<div class="row">
    <div id="flashDiv" class="small-12 large-12 columns">
        <% flash.each do |key, value| %>
            <div data-alert class="alert-box <%=key%> radius text-center">
                <strong><%= value %></strong>
                <a href="#" class="close">&times;</a>
            </div>
        <% end %>
    </div>
</div>